form.account-registration(action="/login" method="post")
  h1.account-registration-header1 Регистрация аккаунта
  input.account-registration-input-name(type="text" name="name" placeholder="Имя")
  input.account-registration-input-lastname(type="text" name="lastname" placeholder="Фамилия")
  
  
  .radio
    label.radio-label_men 
      input.radio-label-men_input(type='radio' name='sex' value='men' checked='')
      |         Мужчина
      .radio-input_men
      
    label.radio-label_women
      input.radio-label-women_input(type='radio' name='sex' value='men')
      |         Женщина
      .radio-input_women
      
    
  h2.account-registration-header_date-of-birth Дата рождения
  input.account-registration-input-date-of-birth(type="date" name="date-of-birth")
  h2.account-registration-header_login-details Данные для входа в сервис
  input.account-registration-input-email(type="email" name="email" placeholder="Email")
  input.account-registration-input-password(type="password" name="password" placeholder="Пароль")
  label.checkbox
    input(type="checkbox" class="checkbox__input" autocomplete='off')
    .checkbox__div 
    p.checkbox__p Получать спецпредложения 
  
   
    .block-link-image
      a.account-registration-link_pay(href="#") 
        span перейти к оплате
        svg.account-registration-link-image_pay(width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg')
          path(d='M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z')
          defs
            lineargradient#paint0_linear(x1='9' y1='-13' x2='9' y2='31' gradientUnits='userSpaceOnUse')
              stop(stop-color='#BC9CFF')
              stop(offset='1' stop-color='#8BA4F9')

  a.account-registration-link_to-come-in(href="#") 
    span войти
  p.account-registration-paragraf Уже есть аккаунт на Toxin